<h2>New Recipe</h2>
<%= form_for(@recipe) do |f| %>
  <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :name, "Recipe Name" %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
    <%= f.submit %>
  </p>
<% end %>
